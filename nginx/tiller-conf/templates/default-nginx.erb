server {
    listen       <%if defined?(env_listen_address)%><%= env_listen_address %>:<%end%><%= env_fromport_clear ||=80 %>;
    location / {
        proxy_pass http://<%= env_toaddress %>:<%= env_toport %><%= env_topath if defined?(env_topath) %>;
        proxy_set_header        Host            $host;
        proxy_set_header        X-Real-IP       $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header        X-Forwarded-Proto $scheme;
    }
}

